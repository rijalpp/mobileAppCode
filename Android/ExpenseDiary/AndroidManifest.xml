        <activity
            android:name=".ActivityViewBudget"
            android:label="Budget Management - View" >
            <intent-filter>
                <action android:name="com.example.expensediary.ACTIVITYVIEWBUDGET" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityViewExpense"
            android:label="@string/title_activity_add_expense" >
            <intent-filter>
                <action android:name="com.example.expensediary.ACTIVITYVIEWEXPENSE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityViewExpenseWithCategory"
            android:label="Expenses View" >
            <intent-filter>
                <action android:name="com.example.expensediary.ACTIVITYVIEWEXPENSEWITHCATEGORY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityViewBalance"
            android:label="Expenses View Balance" >
